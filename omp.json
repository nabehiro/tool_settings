{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "#C591E8",
          "properties": {
            "prefix": "",
            "time_format": "[15:04:05]"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#61AFEF",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "poshgit",
          "style": "powerline"
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#C94A16",
          "properties": {
            "prefix": "x"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "exit",
          "style": "powerline",
          "foreground": "#69FF94",
          "properties": {
            "display_exit_code": false,
            "always_enabled": true,
            "error_color": "red",
            "prefix": "\u276F"
          }
        }
      ]
    }
  ],
  "final_space": true
}
