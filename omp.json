{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#61AFEF",
          "properties": {
            "prefix": "",
            "style": "full"
          }
        },
        {
          "type": "poshgit",
          "style": "powerline"
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#C94A16",
          "properties": {
            "prefix": "x"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "python",
          "style": "plain",
          "foreground": "lightRed",
          "properties": {
            "display_virtual_env": true,
            "display_version": false,
            "prefix": "[ ",
            "postfix": " ]",
            "display_mode": "always"
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "lightGreen",
          "properties": {
            "time_format": "15:04:05"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "exit",
          "style": "powerline",
          "foreground": "lightGreen",
          "properties": {
            "display_exit_code": false,
            "always_enabled": true,
            "error_color": "red",
            "prefix": "\u279c"
          }
        }
      ]
    }
  ],
  "final_space": true
}
